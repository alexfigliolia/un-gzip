{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./lib",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}